{
  "manifest_version": 2,
  "name": "Resuelv+",
  "version": "1.3",
  "description": "Multiherrramienta para encuestas - con IA.",
  "permissions": [
    "history",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "tabs",
    "proxy",
    "notifications",
    "browsingData",
    "bookmarks",
    "privacy",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "lib/fingerprint4.min.js",
      "src/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "src/popup/login.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "commands": {
    "open-proxy-menu": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Abrir menú de proxy"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      }
    },
    "open-history-log": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Abrir registro de historial completo"
    },
    "open-jumpeo-menu": {
      "suggested_key": {
        "default": "Ctrl+Shift+4"
      },
      "description": "Abrir menú de jumpeo"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/hook.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "src/popup/popup.html",
    "src/popup/login.html",
    "src/popup/login.js",
    "src/tampeo/decision.html",
    "src/tampeo/decision.js",
    "src/tampeo/tampeo_config.html",
    "src/tampeo/tampeo_config.js",
    "src/buscador_jump/buscador.html",
    "src/buscador_jump/buscador.js",
    "src/buscador_jump/buscador.css",
    "src/buscador_jump/toluna/toluna.html",
    "src/buscador_jump/toluna/toluna.js",
    "src/buscador_jump/toluna/toluna.css",
    "src/hook.js",
    "src/log/log.html",
    "src/log/log.js",
    "src/log/log.css",
    "src/locales/*.json"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "Resuelv@Resuelv.vip",
      "strict_min_version": "0.0",
      "update_url": "https://resuelv.vip/web/updates.json"
    }
  }
  
}